@model AppWeb.ViewModel.UsuarioViewModel

<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmEdit" method="put">
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Nombres"></label>
                            <input asp-for="Nombres" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Apellidos"></label>
                            <input asp-for="Apellidos" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Cargo"></label>
                            <input asp-for="Cargo" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Oficina"></label>
                            <input asp-for="Oficina" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Experiencia"></label>
                            <input asp-for="Experiencia" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="FechaInicio"></label>
                            <input asp-for="FechaInicio" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Salario"></label>
                            <input asp-for="Salario" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <input asp-for="Codigo" type="hidden" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                <button type="button" class="btn btn-primary" id="btnUpdate">Guardar</button>
            </div>
        </div>
    </div>
</div>